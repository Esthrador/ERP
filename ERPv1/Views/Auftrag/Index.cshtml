@model IEnumerable<ERPv1.Models.Auftrag>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="indexTable" class="table table-striped table-bordered" style="width:100%">
    <thead>
    <th>@Html.DisplayNameFor(c => c.First().AuftragsDatum)</th>
    <th>@Html.DisplayNameFor(c => c.First().AuftragWaren)</th>
    <th>@Html.DisplayNameFor(c => c.First().Status)</th>
    <th>@Html.DisplayNameFor(c => c.First().Lieferant)</th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.AuftragsDatum)</td>
                <td>@Html.DisplayFor(modelItem => item.AuftragWaren.Count)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>@Html.DisplayFor(modelItem => item.Lieferant)</td>
                <td>
                    @Html.ActionLink("Bearbeiten", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Löschen", "Delete", new { id = item.ID })
                </td>
            </tr>
        }
    </tbody>
</table>

@Scripts.Render("~/Scripts/ERPScripts/DataTablesConfig.js")