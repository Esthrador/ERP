@model ERPv1.Models.ViewModels.AuftragViewModel

@{
    ViewBag.Title = "Bearbeiten";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Auftrag")">Übersicht</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("Details", "Auftrag", new { id = Model.AuftragToDo.ID })">Details</a></li>
    <li class="breadcrumb-item active">Bearbeiten</li>
</ol>

<div class="card">
    <div class="card-header">
        Auftrag bearbeiten
    </div>
    <div class="card-body">
        @Html.Partial("_CreateOrEditPartial", Model)
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/ERPScripts/DataTablesConfig.js")
    @Scripts.Render("~/Scripts/ERPScripts/SetMaxScreenWidth.js")
}