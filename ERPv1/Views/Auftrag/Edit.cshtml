@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-header deep-purple white-text lighten-1">
        Auftrag bearbeiten
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.Partial("_CreateOrEditPartial", Model)
        }
    </div>
</div>


<div>
    @Html.ActionLink("Zurück zur Übersicht", "Index")
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/ERPScripts/DataTablesConfig.js")
    <script type="text/javascript">
        $(document).ready(function() {
            $('.datepicker').datepicker();


            $('#selectionTable').on('click',
                'tr',
                function() {
                    $(this).toggleClass('selected');
                });
        });


    </script>
}
