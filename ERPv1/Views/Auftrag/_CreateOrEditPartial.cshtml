@model ERPv1.Models.ViewModels.AuftragViewModel

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
    <div class="md-form">
        @Html.LabelFor(model => model.Auftrag.AuftragsDatum)
        @Html.EditorFor(model => model.Auftrag.AuftragsDatum, new {htmlAttributes = new {type = "text", @class = "form-control datepicker"}})
        @Html.ValidationMessageFor(model => model.Auftrag.AuftragsDatum, "", new {@class = "text-danger"})
    </div>

    <div class="md-form">
        @Html.LabelFor(model => model.Auftrag.Lieferant)
        @Html.EditorFor(model => model.Auftrag.Lieferant, new {htmlAttributes = new {@class = "form-control"}})
        @Html.ValidationMessageFor(model => model.Auftrag.Lieferant, "", new {@class = "text-danger"})
    </div>


    <table id="selectionTable" class="table table-striped table-bordered" style="width: 100%">
        <thead>
        <tr>
            <th>@Html.DisplayNameFor(x => x.Waren.First().Ware.Bezeichnung)</th>
            <th>@Html.DisplayNameFor(x => x.Waren.First().Ware.KurzBezeichnung)</th>
            <th>@Html.DisplayNameFor(x => x.Waren.First().Ware.EinzelGewicht)</th>
            <th>@Html.DisplayNameFor(x => x.Waren.First().Ware.Preis)</th>
            <th>@Html.DisplayNameFor(x => x.Waren.First().Ware.Anzahl)</th>
            <th>@Html.DisplayNameFor(x => x.Waren.First().Ware.SteuerKlasse)</th>
            <th>Anzahl</th>
        </tr>
        </thead>
        <tbody>
        @foreach(var ware in Model.Waren)
        {
            
            <tr>
                <td>@Html.DisplayFor(model => ware.Ware.Bezeichnung)</td>
                <td>@Html.DisplayFor(model => ware.Ware.KurzBezeichnung)</td>
                <td>@Html.DisplayFor(model => ware.Ware.EinzelGewicht)</td>
                <td>@Html.DisplayFor(model => ware.Ware.Preis)</td>
                <td>@Html.DisplayFor(model => ware.Ware.Anzahl)</td>
                <td>@Html.DisplayFor(model => ware.Ware.SteuerKlasse)</td>
                <td>@Html.EditorFor(model => ware.Menge)</td>
            </tr>
        }
        </tbody>
    </table>

    <input type="submit" value="Speichern" class="btn btn-primary"/>






