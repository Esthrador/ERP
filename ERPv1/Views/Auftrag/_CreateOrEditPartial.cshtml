@model ERPv1.Models.ViewModels.AuftragViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
    <div class="md-form">
        @Html.LabelFor(model => model.Auftrag.AuftragsDatum)
        @Html.EditorFor(model => model.Auftrag.AuftragsDatum, new {htmlAttributes = new {type = "text", @class = "form-control datepicker"}})
        @Html.ValidationMessageFor(model => model.Auftrag.AuftragsDatum, "", new {@class = "text-danger"})
    </div>

    <div class="md-form">
        @Html.LabelFor(model => model.Auftrag.Lieferant)
        @Html.EditorFor(model => model.Auftrag.Lieferant, new {htmlAttributes = new {@class = "form-control"}})
        @Html.ValidationMessageFor(model => model.Auftrag.Lieferant, "", new {@class = "text-danger"})
    </div>


    <table id="selectionTable" class="table table-striped table-bordered" style="width: 80%">
        <thead>
        <tr>
            <th>@Html.DisplayNameFor(x => x.Waren.First().Bezeichnung)</th>
            <th>@Html.DisplayNameFor(x => x.Waren.First().KurzBezeichnung)</th>
            <th>@Html.DisplayNameFor(x => x.Waren.First().EinzelGewicht)</th>
            <th>@Html.DisplayNameFor(x => x.Waren.First().Preis)</th>
            <th>@Html.DisplayNameFor(x => x.Waren.First().Anzahl)</th>
            <th>@Html.DisplayNameFor(x => x.Waren.First().SteuerKlasse)</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var ware in Model.Waren)
        {
            <tr>
                <td>@ware.Bezeichnung</td>
                <td>@ware.KurzBezeichnung</td>
                <td>@ware.EinzelGewicht</td>
                <td>@ware.Preis</td>
                <td>@ware.Anzahl</td>
                <td>@ware.SteuerKlasse</td>
            </tr>
        }
        </tbody>
    </table>

    <input type="submit" value="Speichern" class="btn btn-primary"/>


}



