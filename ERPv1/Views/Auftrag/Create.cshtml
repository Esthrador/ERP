@model ERPv1.Models.ViewModels.AuftragViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Auftrag")">Übersicht</a></li>
    <li class="breadcrumb-item active">Erstellen</li>
</ol>

<div class="card">
    <div class="card-header">
        Auftrag erstellen
    </div>
    <div class="card-body">
        @Html.Partial("_CreateOrEditPartial", Model)
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    $(document).ready(function() {
        $("#containerDiv").removeClass("container");
        $("#containerDiv").addClass("container-fluid");
    });
</script>