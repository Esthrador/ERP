@model ERPv1.Models.ViewModels.AuftragViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form">
        <h4>Auftrag anlegen</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Auftrag.AuftragsDatum, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Auftrag.AuftragsDatum, new { htmlAttributes = new { @id="datepicker", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Auftrag.AuftragsDatum, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Auftrag.Lieferant, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Auftrag.Lieferant, new { htmlAttributes = new { @id="datepicker", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Auftrag.Lieferant, "", new { @class = "text-danger" })
            </div>
        </div>
        
        
        <table id="indexTable" class="table table-striped table-bordered" style="width:80%">
            <thead>
            <tr>
                <th>@Html.DisplayNameFor(x => x.Waren.First().Bezeichnung)</th>
                <th>@Html.DisplayNameFor(x => x.Waren.First().KurzBezeichnung)</th>
                <th>@Html.DisplayNameFor(x => x.Waren.First().EinzelGewicht)</th>
                <th>@Html.DisplayNameFor(x => x.Waren.First().Preis)</th>
                <th>@Html.DisplayNameFor(x => x.Waren.First().Anzahl)</th>
                <th>@Html.DisplayNameFor(x => x.Waren.First().SteuerKlasse)</th>
            </tr>
            </thead>
            <tbody id="selectionTable">
            @foreach (var ware in Model.Waren)
            {
                <tr>
                    <td>@ware.Bezeichnung</td>
                    <td>@ware.KurzBezeichnung</td>
                    <td>@ware.EinzelGewicht</td>
                    <td>@ware.Preis</td>
                    <td>@ware.Anzahl</td>
                    <td>@ware.SteuerKlasse</td>
                </tr>
            }
            </tbody>
        </table>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/ERPScripts/DataTablesConfig.js")
    <script type="text/javascript">
        $(document).ready(function() {
            $('#datepicker').datepicker();


            $('#selectionTable').on('click',
                'tr',
                function() {
                    $(this).toggleClass('selected');
                });
        });





    </script>
}
