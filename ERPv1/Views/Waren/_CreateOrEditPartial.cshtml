@model ERPv1.Models.Ware

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row">
        <div class="col-md-6">

            @if (Model?.ID != null && Model.ID != Guid.Empty)
            {
                @Html.HiddenFor(model => model.ID)
                @Html.HiddenFor(model => model.CreatedBy)
                @Html.HiddenFor(model => model.CreatedOn)

                @Html.HiddenFor(model => model.ChangedBy)
                @Html.HiddenFor(model => model.ChangedOn)

                @Html.HiddenFor(model => model.DeletedBy)
                @Html.HiddenFor(model => model.DeletedOn)
            }

            <div class="md-form">
                @Html.LabelFor(model => model.Bezeichnung)
                @Html.EditorFor(model => model.Bezeichnung, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Bezeichnung, "", new { @class = "text-danger" })
            </div>

            <div class="md-form">
                @Html.LabelFor(model => model.KurzBezeichnung)
                @Html.EditorFor(model => model.KurzBezeichnung, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.KurzBezeichnung, "", new { @class = "text-danger" })
            </div>

            <div class="md-form">
                @Html.LabelFor(model => model.Anzahl)
                @Html.EditorFor(model => model.Anzahl, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Anzahl, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="md-form">
                @Html.LabelFor(model => model.Preis)
                @Html.EditorFor(model => model.Preis, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Preis, "", new { @class = "text-danger" })
            </div>

            <div class="md-form">
                @Html.LabelFor(model => model.SteuerKlasse)
                @Html.EditorFor(model => model.SteuerKlasse, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SteuerKlasse, "", new { @class = "text-danger" })
            </div>

            <div class="md-form">
                @Html.LabelFor(model => model.EinzelGewicht)
                @Html.EditorFor(model => model.EinzelGewicht, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EinzelGewicht, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="flex-row card-buttons">
        <input type="submit" value="Speichern" class="btn btn-primary" />

        @Html.ActionLink("Zurück zur Liste", "Index", null, new { @class = "btn btn-white text-dark" })
    </div>

}