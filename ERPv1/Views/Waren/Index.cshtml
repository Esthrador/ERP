@using ERPv1.Extensions
@model IEnumerable<ERPv1.Models.Ware>

@{
    ViewBag.Title = "Waren Übersicht";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="animated fadeInLeft">

    <h4>@ViewBag.Title</h4>
    <span> Test <i class="fas fa-circle"></i></span>
    <hr />

    <p>
        @Html.ActionLinkWithIcon("Neue Ware erstellen", "fas fa-plus-circle", true, "Create", "Waren", null, new { @class = "btn btn-primary", style = "margin-left:0;" })
    </p>

    <table id="indexTable" class="table table-striped table-bordered" style="width: 100%; padding-left: 0; padding-right: 0;">
        <thead>
        <tr>
            <th>@Html.DisplayNameFor(x => x.Bezeichnung)</th>
            <th>@Html.DisplayNameFor(x => x.KurzBezeichnung)</th>
            <th>@Html.DisplayNameFor(x => x.EinzelGewicht)</th>
            <th>@Html.DisplayNameFor(x => x.Preis)</th>
            <th>@Html.DisplayNameFor(x => x.Anzahl)</th>
            <th>@Html.DisplayNameFor(x => x.SteuerKlasse)</th>

        </tr>
        </thead>
        <tbody>
        @foreach (var ware in Model)
        {
            <tr>
                <td>@ware.Bezeichnung</td>
                <td>@ware.KurzBezeichnung</td>
                <td>@ware.EinzelGewicht</td>
                <td>@ware.Preis</td>
                <td>@ware.Anzahl</td>
                <td>@ware.SteuerKlasse</td>
            </tr>
        }
        </tbody>
    </table>
</div>

@Scripts.Render("~/Scripts/ERPScripts/DataTablesConfig.js")
