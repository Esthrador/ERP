@model ERPv1.Models.Ware

@{
    ViewBag.Title = "Bearbeiten";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Waren")">Übersicht</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("Details", "Waren", new { id = Model.ID })">Details</a></li>
    <li class="breadcrumb-item active">Bearbeiten</li>
</ol>

<div class="card">
    <div class="card-header">
        Ware bearbeiten
    </div>
    <div class="card-body">
        @Html.Partial("_CreateOrEditPartial", Model)
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}