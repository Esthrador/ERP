@using System.Globalization
@using ERPv1.Extensions
@model IEnumerable<ERPv1.Models.Lager>

@{
    ViewBag.Title = "Lager Übersicht";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item active">Übersicht</li>
</ol>

<div>

    <h4>@ViewBag.Title</h4>

    <hr />

    <p>
        @Html.ActionLinkWithIcon("Neues Lager erstellen", "fa fa-plus-circle", true, "Create", "Lager", null, new { @class = "btn btn-primary", style = "margin-left:0;" })
    </p>

    <table id="indexTable" class="table table-striped table-bordered" style="width: 100%; padding-left: 0; padding-right: 0;">
        <thead>
            <tr>
                <th class="no-pointer"></th>
                <th>@Html.DisplayNameFor(x => x.Standort)</th>
                <th>@Html.DisplayNameFor(x => x.Bezeichnung)</th>
                <th>@Html.DisplayNameFor(x => x.Ort)</th>
                <th>@Html.DisplayNameFor(x => x.Adresse)</th>
                <th>@Html.DisplayNameFor(x => x.PLZ)</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var lager in Model)
        {
            <tr>
                <td><a href="@Url.Action("Details", "Lager", new { id = lager.ID })"><span class="badge badge-default button-column" style="padding: 5px">Details</span></a></td>
                <td>@lager.Standort</td>
                <td>@lager.Bezeichnung</td>
                <td>@lager.Ort</td>
                <td>@lager.Adresse</td>
                <td>@lager.PLZ</td>
            </tr>
        }
        </tbody>
    </table>
</div>

@Scripts.Render("~/Scripts/ERPScripts/DataTablesConfig.js")
