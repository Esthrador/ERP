@model ERPv1.Models.Kunde

<div class="row">
    <div class="col-md-6">

        @if (Model?.ID != null && Model.ID != Guid.Empty)
        {
            @Html.HiddenFor(model => model.ID)
            @Html.HiddenFor(model => model.CreatedBy)
            @Html.HiddenFor(model => model.CreatedOn)

            @Html.HiddenFor(model => model.ChangedBy)
            @Html.HiddenFor(model => model.ChangedOn)

            @Html.HiddenFor(model => model.DeletedBy)
            @Html.HiddenFor(model => model.DeletedOn)
        }

        <div class="md-form">
            @Html.LabelFor(model => model.Vorname)
            @Html.EditorFor(model => model.Vorname, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Vorname, "", new { @class = "text-danger" })
        </div>

        <div class="md-form">
            @Html.LabelFor(model => model.Nachname)
