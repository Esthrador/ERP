        </div>

        <div class="form-check mt-4">
            @Html.CheckBoxFor(m => m.IsFirma, new { @class = "form-check-input" })
            @Html.LabelFor(m => m.IsFirma, new { @class = "form-check-label" })
            @Html.ValidationMessageFor(model => model.IsFirma, "", new { @class = "text-danger" })
        </div>
    </div>
